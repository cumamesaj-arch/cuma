rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Posts koleksiyonu - okuma herkese açık, yazma sadece admin
    match /posts/{postId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
    
    // Comments koleksiyonu - okuma herkese açık, yazma authenticated kullanıcılar için
    match /comments/{commentId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && 
        (resource.data.userId == request.auth.uid || request.auth.token.admin == true);
    }
    
    // Users koleksiyonu
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Settings koleksiyonu - sadece admin okuyabilir/yazabilir
    match /settings/{settingId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
  }
}













